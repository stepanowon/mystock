{
  "name": "mystock",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "stocks:download": "node scripts/download-kr-stocks.js",
    "etfs:download": "node scripts/download-kr-etfs.js",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "build:electron": "tsc -b && vite build && electron-builder"
  },
  "main": "electron/main.cjs",
  "dependencies": {
    "@tanstack/react-query": "^5.62.0",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "firebase": "^11.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "recharts": "^2.15.0",
    "zod": "^3.24.0",
    "zustand": "^5.0.0"
  },
  "build": {
    "appId": "com.mystock.app",
    "productName": "내주식보기",
    "directories": {
      "output": "release"
    },
    "files": [
      "package.json",
      "dist/*",
      "dist/**/*",
      "electron/*",
      "electron/**/*"
    ],
    "toolsets": {
      "winCodeSign": "1.1.0"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "artifactName": "mystock-setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "내주식보기"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Finance"
    }
  },
  "devDependencies": {
    "@netlify/functions": "^2.8.2",
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.0",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.7.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  }
}
